{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "myprefix/richtext-multi-components",
  "title": "RichText Multiple Components",
  "icon": "lightbulb",
  "category": "text",
  "description": "Uses multiple RichText components in one block.",
  "attributes": {
    "heading": {
      "type": "string",
      "source": "html",
      "selector": "header h1",
      "default": ""
    },
    "content": {
      "type": "string",
      "source": "html",
      "selector": "section p",
      "default": ""
    },
    "footer": {
      "type": "string",
      "source": "html",
      "selector": "footer p",
      "default": ""
    }
  },
  "editorScript": "file:./index.js"
}
